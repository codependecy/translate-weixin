@font-face {
  font-family: 'iconfont';  /* project id 1114423 */
  src: url('https://at.alicdn.com/t/font_1114423_n5tcnsjhie.ttf') format('truetype')
}
.iconfont{
    font-family:"iconfont" !important;
    font-size:14px;
    font-style:normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
    color: #8995a1;
}
.icon-down:before { 
    content: "\e631"; 
}
.icon-close:before { 
    content: "\e602"; 
}

.change{
  width: 100%;
  height: 100rpx;
  background: #f6f9fe;
  font-size: 30rpx;
  line-height: 100rpx;
  color: #9399a0;
}
.change picker{
  padding-left: 20px;
}
.input{
  border-bottom: 1px solid #ced4e3;
  background: #fff;
  display: flex;
}
.input textarea{
  width: 300px;
  padding: 20px;
}

.icon-close{
  margin-top: 47rpx;
}

.translation{
  height: 200rpx;
  background: #fff;
  padding: 20px;
  color: #9299a2;
